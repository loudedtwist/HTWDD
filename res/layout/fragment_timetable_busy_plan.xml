<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timetable_busy_plan_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timetable_busy_plan_ds" />

    <TextView
        android:id="@+id/timetable_busy_plan_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timetable_busy_plan_ds"
        android:layout_toRightOf="@+id/timetable_busy_plan_ds"
        android:layout_toEndOf="@+id/timetable_busy_plan_ds"
        android:layout_marginStart="@dimen/app_table_margin" />
</RelativeLayout>